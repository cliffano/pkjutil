{
  "options": [
    { "arg": "-f, --file <file>", "desc": "package.json file path" }
  ],
  "commands": {
    "upgrade-version-patch": {
      "desc": "Upgrade patch version number",
      "options": [
        { "arg": "-p, --parsable", "desc": "Display upgraded version number only, for non-human consumption." }
      ]
    },
    "upgrade-version-minor": {
      "desc": "Upgrade minor version number",
      "options": [
        { "arg": "-p, --parsable", "desc": "Display upgraded version number only, for non-human consumption." }
      ]
    },
    "upgrade-version-major": {
      "desc": "Upgrade major version number",
      "options": [
        { "arg": "-p, --parsable", "desc": "Display upgraded version number only, for non-human consumption." }
      ]
    },
    "upgrade-version": {
      "desc": "Alias for upversion-patch",
      "options": [
        { "arg": "-p, --parsable", "desc": "Display upgraded version number only, for non-human consumption." }
      ],
      "examples": [
        "pkjutil upgrade-version --parsable"
      ]
    },
    "upgrade-dependencies": {
      "desc": "Upgrade all dependencies to latest version",
      "options": [
        { "arg": "-r, --registry <registry>", "desc": "package.json file path" }
      ],
      "examples": [
        "pkjutil upgrade-dependencies --registry http://user:pass@registry:port"
      ]
    },
    "list-dependencies": {
      "desc": "List dependencies"
    },
    "list-devdependencies": {
      "desc": "List dev dependencies"
    },
    "list-peerdependencies": {
      "desc": "List peer dependencies"
    },
    "list-optdependencies": {
      "desc": "List opt dependencies"
    },
    "list-alldependencies": {
      "desc": "List dependencies and dev dependencies"
    },
    "sort-dependencies": {
      "desc": "Sort dependencies"
    },
    "sort-devdependencies": {
      "desc": "Sort dev dependencies"
    },
    "sort-peerdependencies": {
      "desc": "Sort peer dependencies"
    },
    "sort-optdependencies": {
      "desc": "Sort optional dependencies"
    },
    "sort-alldependencies": {
      "desc": "Sort dependencies and dev dependencies"
    },
    "traverse-dependencies": {
      "desc": "Traverse dependencies, similar to 'npm ls' but listing dependency references instead of versions, execute this command from package root directory"
    }
  }
}